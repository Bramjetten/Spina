<%= render(Spina::ModalComponent.new(size: "max-w-5xl")) do |component| %>
  <% component.with(:body) do %>
    <div class="flex flex-col h-full w-full" 
      data-controller="infinite-scroll media-picker-modal" 
      data-infinite-scroll-path="<%= helpers.spina.admin_media_picker_images_path %>">
      <div class="flex flex-1 flex-col flex-col-reverse md:flex-row h-full w-full">
        <div class="md:w-64 p-6 border-t rounded-b-lg md:rounded-none md:border-t-0 border-gray-200 flex flex-col justify-between bg-white md:bg-gray-100 md:bg-opacity-50 md:rounded-l-lg">
          <div class="hidden md:block md:mb-6">
            <button type="button" data-action="infinite-scroll#changePath" data-infinite-scroll-path="<%= helpers.spina.admin_media_picker_images_path %>" class="font-medium w-full bg-gray-300 text-gray-900 text-sm px-3 py-2 rounded-lg flex items-center justify-between -mx-3 -mt-2">
              Recent images

              <svg class="w-5 h-5 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            </button>

            <% media_folders.each do |media_folder| %>
              <button type="button" data-action="infinite-scroll#changePath" data-infinite-scroll-path="<%= helpers.spina.admin_media_picker_media_folder_path(media_folder) %>" class="font-medium w-full text-gray-600 text-sm hover:bg-gray-50 px-3 -mx-3 py-2 cursor-pointer rounded-lg flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                </svg>
                <%= media_folder.name %>
              </button>
            <% end %>
          </div>

          <div class="btn btn-default -mx-2 -mb-2">
            <svg class="w-4 h-4 mr-2 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            Upload image
          </div>
        </div>

        <div class="flex-1 bg-white flex flex-col">
          <div data-target="infinite-scroll.container" class="flex-1 p-6 h-full w-full overflow-scroll grid grid-cols-2 md:grid-cols-4 gap-6 auto-rows-min">
            <!-- Buttons here -->
          </div>
          <div class="p-4 bg-white border-t border-gray-200 flex justify-between items-center">
            <input type="text" class="form-input text-sm w-full mr-3" placeholder="Alt text" />
            <button type="button" class="btn btn-primary" data-action="media-picker-modal#insert">
              Insert image
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
