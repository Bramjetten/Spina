<div data-controller="modal" data-target="media-picker.modal" class="hidden fixed inset-0 bg-gray-700 bg-opacity-50 z-50 flex items-center justify-center p-6">
  <button type="button" class="fixed inset-0 cursor-default" tabindex="-1" data-action="modal#close"></button>
  <div class="bg-white rounded-lg w-full max-w-3xl p-6 shadow-lg relative">
    <div class="flex justify-between items-center">
      <div class="text-lg font-medium text-gray-700">Choose image</div>
      <button type="button" class="text-2xl" data-action="modal#close">&times;</button>
    </div>

    <div class="grid" data-target="media-picker.grid">
      <% if false %>
        <% Spina::Image.all.each do |image| %>
          <button type="button" 
            data-action="media-picker#selectImage" 
            data-image-id="<%= image.id %>"
            data-signed-blob-id="<%= image.file.blob.signed_id %>"
            data-filename="<%= image.file.filename %>"
            data-thumbnail="<%= thumbnail_url(image) %>">

            <div class="w-48 h-32 rounded-md">
              <%= image_tag helpers.thumbnail_url(image), class: 'w-full' %>  
            </div>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>