<div class="mt-6" data-controller="media-picker reveal" data-media-picker-path="<%= spina.admin_media_picker_path %>">
  <label for="price" class="block text-sm leading-5 font-medium text-gray-700"><%= f.object.title %></label>

  <%= f.hidden_field :signed_blob_id, placeholder: "Signed blob ID", data: {target: "media-picker.signedBlobId"} %>
  <%= f.hidden_field :filename, placeholder: "Filename", data: {target: "media-picker.filename"} %>
  <%= f.hidden_field :image_id, placeholder: "Image ID", data: {target: "media-picker.imageId"} %>

  <button class="float-right flex items-center h-9 px-2 ml-3 rounded-md border bg-white border-gray-300 active:shadow-inner text-gray-400 hover:text-gray-700 text-sm font-medium leading-none leading-none shadow-sm" data-action="media-picker#removeImage" type="button">
    <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
    </svg>
  </button>

  <button type="button" data-action="reveal#show" class="relative mt-1">
    <div class="w-36 h-36 bg-transparent border-2 border-dashed border-gray-300 rounded-lg flex items-center flex-col justify-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <div class="text-gray-400 font-medium text-sm">Choose image</div>
    </div>

    <div class="border absolute inset-0 w-36 h-36 bg-gray-100 rounded-lg shadow-md overflow-hidden" data-target="media-picker.thumbnail">
      <% if f.object.signed_blob_id.present? && f.object.spina_image.present? %>
        <%= image_tag thumbnail_url(f.object.spina_image), class: 'object-contain h-36 w-full' %>
      <% end %>
    </div>
  </button>

  <%= f.text_field :alt, placeholder: "Alt text", class: "h-10 px-3 italic bg-transparent w-full max-w-xs text-sm block", data: {target: "media-picker.alt"} %>

  <!-- Gray overlay -->
  <div hidden data-reveal class="fixed z-50 inset-0 bg-gray-700 bg-opacity-50 w-full h-full"></div>

  <div hidden class="fixed z-50 inset-0"
    data-reveal 
    data-transition 
    data-controller="infinite-scroll" 
    data-action="reveal:show->infinite-scroll#initialLoad" 
    data-infinite-scroll-path="<%= spina.admin_media_picker_images_path %>">

    <!-- Overlay button to close -->
    <button type="button" class="w-full h-full fixed inset-0" tabindex="-1" data-action="reveal#hide"></button>

    <!-- Modal positioning -->
    <div class="flex items-center justify-center p-6 h-full">

      <!-- Modal window -->
      <div class="bg-white rounded-lg overflow-hidden w-full max-h-full h-full max-w-5xl shadow-lg relative">
        <div class="flex flex-col h-full w-full ">
          <div class="flex flex-1 h-full w-full">
            <div class="w-64 p-6 border-r border-gray-200 shadow-lg bg-white flex flex-col justify-between">
              <div>
                <button type="button" data-action="infinite-scroll#changePath" data-infinite-scroll-path="<%= spina.admin_media_picker_images_path %>" class="font-medium w-full bg-gray-200 text-gray-900 px-3 py-2 rounded-lg flex items-center justify-between -mx-3 -mt-2">
                  Recent images

                  <svg class="w-5 h-5 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </button>

                <% Spina::MediaFolder.all.each do |media_folder| %>
                  <button type="button" data-action="infinite-scroll#changePath" data-infinite-scroll-path="<%= spina.admin_media_picker_media_folder_path(media_folder) %>" class="font-medium w-full text-gray-600 hover:bg-gray-50 px-3 -mx-3 py-2 cursor-pointer rounded-lg flex items-center">
                    <svg class="w-4 h-4 mr-2 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                    </svg>
                    <%= media_folder.name %>
                  </button>
                <% end %>
              </div>

              <div class="font-medium text-gray-600 hover:bg-gray-50 px-3 py-2 pl-1 cursor-pointer rounded-md flex items-center mt-6 bg-white border border-gray-200 shadow-sm justify-center">
                <svg class="w-4 h-4 mr-2 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                Upload image
              </div>
            </div>

            <div class="flex-1 h-full w-full overflow-scroll grid sm:grid-cols-3 md:grid-cols-4 gap-6 auto-rows-min p-6 bg-gray-200 bg-opacity-50" data-target="infinite-scroll.container">          
              <!-- Buttons here -->
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>
