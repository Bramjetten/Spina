<!-- Gray overlay -->
<div class="fixed z-50 inset-0 bg-gray-700 bg-opacity-50 w-full h-full"></div>

<div class="fixed z-50 inset-0">

  <!-- Overlay button to close -->
  <button type="button" class="w-full h-full fixed inset-0" tabindex="-1" data-action="reveal#hide"></button>

  <!-- Modal positioning -->
  <div class="flex items-center justify-center p-6 h-full">

    <!-- Modal window -->
    <div class="bg-white rounded-lg overflow-hidden w-full max-w-lg shadow-lg relative">

      <%= form_with model: @page, url: spina.admin_pages_path do |f| %>
        <%= f.hidden_field :view_template %>

        <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
              <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">
                Add new page
                <span class="text-gray-400 text-sm">(<%= f.object.view_template %>)</span>
              </h3>

              <div class="mt-3">
                <%= f.text_field :title, placeholder: Spina::Page.human_attribute_name(:title), class: "form-input block w-full py-2 px-3 border border-gray-300 shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
              </div>

              <div class="grid grid-cols-2 gap-6 mt-6">
                <div class="col-span-1">
                  <label for="page[ancestry]" class="block text-sm font-medium leading-5 text-gray-700">
                    <%= Spina::Page.human_attribute_name :ancestry %>
                  </label>

                  <%= f.select :parent_id, page_ancestry_options(f.object), {include_blank: Spina::Page.human_attribute_name(:no_parent)}, class: "mt-1 text-gray-700 block form-select py-2 pr-10 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-100 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <span class="flex w-full rounded-md shadow-sm sm:ml-3 sm:w-auto">
            <button type="submit" class="btn btn-primary">
              Create page
            </button>
          </span>
          <span class="mt-3 flex w-full rounded-md shadow-sm sm:mt-0 sm:w-auto">
            <button type="button" class="btn">
              Cancel
            </button>
          </span>
        </div>
      <% end %>
    </div>

  </div>
</div>