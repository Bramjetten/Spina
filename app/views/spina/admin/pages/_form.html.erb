<%= form_with model: @page, url: spina.admin_page_path(@page) do |f| %>
  <div class="bg-white border-b border-gray-200 p-6 pl-8 sticky top-0 relative z-20">
    <div class="flex justify-between items-center">
      <div class="text-2xl font-normal text-gray-800 flex items-center">
        <%= link_to 'Pages', spina.admin_pages_path, class: 'text-gray-400' %>
        <svg class="w-5 h-5 mx-2 text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <%= @page.menu_title %>
      </div>

      <div class="flex">
        <button type="submit" class="flex items-center h-9 px-2 pr-4 ml-3 rounded-md border bg-spina border-spina-dark active:shadow-inner text-white text-sm font-medium leading-none hover:bg-spina leading-none shadow-sm">
          <svg class="w-7 h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Save page
        </button>
      </div>
    </div>
  </div>

  <div class="p-8 grid grid-cols-4 gap-6">
    <div class="col-span-3">
      <div class="bg-white rounded-md border border-gray-200 shadow-sm p-6">
        <label class="font-medium text-gray-700">Title</label>
        <input id="first_name" class="mt-1 form-input block w-full p-4 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-lg text-gray-700 font-medium sm:leading-5" placeholder="Title" value="<%= @page.title %>">

        <% parts = (current_theme.view_templates.find{|v|v[:name].to_s == f.object.view_template.to_s}&.dig(:parts) || []) %>

        <%= f.fields_for "#{@locale}_content".to_sym, build_parts(f.object, parts) do |ff| %>
          <%= ff.hidden_field :type, value: ff.object.class %>
          <%= ff.hidden_field :name %>
          <%= ff.hidden_field :title %>

          <div data-name="<%= ff.object.name %>">
            <%= render "spina/admin/parts/#{parts_partial_namespace(ff.object.class.to_s)}/form", f: ff %>
          </div>
        <% end %>
      </div>

      <div class="bg-white rounded-md border border-gray-200 shadow-sm mt-6 p-6">
        <div class="">
          <label for="first_name" class="block font-medium leading-5 text-gray-700 flex items-center">
            <svg class="h-4 w-4 mr-1 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
            SEO title and description
          </label>
          <div class="text-gray-400 text-sm">Ensure your search result looks good in search engines</div>
          <input id="first_name" class="mt-3 block w-full py-2 px-3 border border-gray-300 border-b-0 rounded-t-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" placeholder="SEO title">
        </div>

        <div class="">
          <textarea id="first_name" class="resize-none block w-full py-2 px-3 border border-gray-300 rounded-b-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" placeholder="SEO description"></textarea>
        </div>

        <label for="first_name" class="mt-6 block font-medium leading-5 text-gray-700">Preview</label>

        <div class="bg-cool-gray-100 bg-opacity-75 rounded-md p-6 mt-3 max-w-2xl">
          <div class="text-xs text-gray-500">www.misterhop.com › ontdek › virtu...</div>
          <div class="text-lg text-blue-500">Virtuele bierproeverij organiseren? - Beleef het samen - Mr. Hop</div>
          <div class="text-gray-700 text-sm">
            Ben je met meer dan 4 personen maak dan gebruik van bijvoorbeeld Facetime, Skype, Google Hangouts, Zoom, Microsoft Teams of het populaire Houseparty.
          </div>
        </div>
      </div>
    </div>

    <div class="col-span-1">
      <div>
        <div class="mb-6">
          <div class="">
            <div class="relative">
              <span class="inline-block w-full rounded-md shadow-sm">
                <button type="button" aria-haspopup="listbox" aria-expanded="true" aria-labelledby="listbox-label" class="cursor-default relative w-full rounded-md border border-gray-300 bg-white pl-4 text-gray-700 pr-10 py-3 text-left focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition ease-in-out duration-150 sm:text-md sm:leading-5">
                  <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-green-400 rounded-full"></div>
                    <span class="block truncate font-medium">
                      Published
                    </span>
                  </div>
                  <span class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="none" stroke="currentColor">
                      <path d="M7 7l3-3 3 3m0 6l-3 3-3-3" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  </span>
                </button>
              </span>
              <div class="flex items-center justify-between leading-5 text-sm text-gray-400 p-2 px-3">
                <%= @page.materialized_path %>
                <a href="#" class="text-xs text-spina text-right hover:underline ml-2">edit slug</a>
              </div>
            </div>

            <% if false %>
              <div class="mt-6">
                <div class="col-span-1 py-2">
                  <label for="country" class="block text-sm font-medium leading-5 text-gray-700">Category</label>
                  <div class="text-sm text-gray-500">Where should your page live</div>
                </div>

                <div class="col-span-2">
                  <select id="country" class="mt-1 block form-select w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                    <option>Pages</option>
                  </select>
                </div>
              </div>
            <% end %>

            <div class="text-md mt-10 font-medium text-gray-400 flex justify-end items-center leading-none">
              Advanced options
              <svg class="h-5 w-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
              </svg>
            </div>

            <% if false %>
              <div class="mt-3">
                <div class="col-span-2">
                  <div class="bg-white rounded-md shadow-sm flex border border-gray-300">
                    <label for="company_website" class="inline-flex items-center px-3 rounded-l-md border-r border-gray-200 font-medium bg-gray-50 text-gray-500 text-sm">
                      Parent
                    </label>
                    <select id="country" class="block w-full py-3 px-3 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-none bg-transparent">
                      <option>No parent</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="mt-3">
                <div class="col-span-2">
                  <div class="bg-white rounded-md shadow-sm flex border border-gray-300">
                    <label for="company_website" class="inline-flex items-center px-3 rounded-l-md border-r border-gray-200 font-medium bg-gray-50 text-gray-500 text-sm">
                      Template
                    </label>
                    <select id="country" class="block w-full py-3 px-3 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-none bg-transparent">
                      <option>Default</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="mt-6">
                <div class="text-sm leading-5 w-full">
                  <label for="comments" class="font-medium text-gray-700">Menu label</label>
                  <p class="text-gray-500">Default menu label is page title</p>

                  <input id="menu_label" type="text" class="form-input shadow-sm text-sm w-full mt-2" placeholder="Menu title" />
                </div>
              </div>

              <div class="mt-8">
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="comments" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                  </div>
                  <div class="ml-3 text-sm leading-5">
                    <label for="comments" class="font-medium text-gray-700">Hide from navigation</label>
                    <p class="text-gray-500">Don't show this page in nav</p>
                  </div>
                </div>
              </div>

              <div class="mt-8">
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="comments" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                  </div>
                  <div class="ml-3 text-sm leading-5">
                    <label for="comments" class="font-medium text-gray-700">301 Redirect</label>
                    <p class="text-gray-500">Forward this page to it's first child or to a URL</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>