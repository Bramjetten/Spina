<div>
  <div class="mt-1">
    <% if false %>
      <div class="mt-6">
        <div class="col-span-1 py-2">
          <label for="country" class="block text-sm font-medium leading-5 text-gray-700">Category</label>
          <div class="text-sm text-gray-500">Where should your page live</div>
        </div>

        <div class="col-span-2">
          <select id="country" class="mt-1 block form-select w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
            <option>Pages</option>
          </select>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="">
    <div class="col-span-1">
      <label for="ancestry" class="block text-sm font-medium leading-5 text-gray-700">
        <%= Spina::Page.human_attribute_name :ancestry %>
      </label>
    </div>

    <div class="col-span-2">
      <%= f.select :parent_id, page_ancestry_options(f.object), {include_blank: Spina::Page.human_attribute_name(:no_parent)}, class: "mt-1 text-gray-700 block form-select w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
    </div>
  </div>

  <% unless @page.draft? %>
    <div class="mt-8">
      <div class="col-span-1 mt-6">
        <label for="country" class="block text-sm font-medium leading-5 text-gray-700">
          <%= Spina::Page.human_attribute_name :draft %>  
        </label>

        <div class="text-sm leading-5">
          <p class="text-gray-500"><%= Spina::Page.human_attribute_name :draft_description %></p>
        </div>
      </div>

      <div class="mt-1">
        <button type="button" data-controller="switch" data-action="click->switch#toggle">
          <%= f.check_box :draft, hidden: true, data: {target: "switch.checkbox"} %>

          <div data-target="switch.container" class="w-14 h-8 bg-gray-200 rounded-full flex items-center p-1 cursor-pointer transition transition-colors duration-200">
            <div data-target="switch.knob" class="h-6 w-6 rounded-full bg-white shadow-sm transform transition transition-transform duration-200"></div>
          </div>
        </button>
      </div>
    </div>
  <% end %>


  <div class="mt-8">
    <div class="col-span-1 mt-6">
      <label for="country" class="block text-sm font-medium leading-5 text-gray-700">
        <%= Spina::Page.human_attribute_name :show_in_menu %>  
      </label>

      <div class="text-sm leading-5">
        <p class="text-gray-500"><%= Spina::Page.human_attribute_name :show_in_menu_description %></p>
      </div>
    </div>

    <div class="mt-1">
      <button type="button" data-controller="switch" data-action="click->switch#toggle">
        <%= f.check_box :show_in_menu, hidden: true, data: {target: "switch.checkbox"} %>

        <div data-target="switch.container" class="w-14 h-8 bg-gray-200 rounded-full flex items-center p-1 cursor-pointer transition transition-colors duration-200">
          <div data-target="switch.knob" class="h-6 w-6 rounded-full bg-white shadow-sm transform transition transition-transform duration-200"></div>
        </div>
      </button>
    </div>
  </div>

  <div class="mt-6">
    <div class="text-sm leading-5 w-full">
      <label for="comments" class="font-medium text-gray-700">
        <%= Spina::Page.human_attribute_name :menu_title %>
      </label>

      <%= f.text_field :menu_title, placeholder: Spina::Page.human_attribute_name(:show_in_menu_placeholder), value: f.object.menu_title(fallback: false, default: nil), class: "form-input shadow-sm text-sm w-full mt-2" %>
    </div>
  </div>

  <div class="mt-6">
    <div class="text-sm leading-5 w-full">
      <label for="comments" class="font-medium text-gray-700"><%= Spina::Page.human_attribute_name(:url_title) %></label>
      <p class="text-gray-500"><%= Spina::Page.human_attribute_name :url_title_description %></p>

      <%= f.text_field :url_title, class: "form-input shadow-sm text-sm w-full mt-2", placeholder: f.object.slug || Spina::Page.human_attribute_name(:url_title_placeholder), value: f.object.url_title(fallback: false, default: nil)&.parameterize %>
    </div>
  </div>

  <div class="mt-8">
    <div class="col-span-1 mt-6">
      <label for="country" class="block text-sm font-medium leading-5 text-gray-700">
        <%= Spina::Page.human_attribute_name :skip_to_first_child %>  
      </label>

      <div class="text-sm leading-5">
        <p class="text-gray-500"><%= Spina::Page.human_attribute_name :skip_to_first_child_description %></p>
      </div>
    </div>

    <div class="mt-1">
      <button type="button" data-controller="switch" data-action="click->switch#toggle">
        <%= f.check_box :skip_to_first_child, hidden: true, data: {target: "switch.checkbox"} %>

        <div data-target="switch.container" class="w-14 h-8 bg-gray-200 rounded-full flex items-center p-1 cursor-pointer transition transition-colors duration-200">
          <div data-target="switch.knob" class="h-6 w-6 rounded-full bg-white shadow-sm transform transition transition-transform duration-200"></div>
        </div>
      </button>
    </div>
  </div>

  <% if @page.persisted? && !@page.custom_page? %>
    <div class="mt-8">
      <a href="<%= spina.edit_template_admin_page_path(@page) %>" data-controller="remote-modal" class="flex items-center justify-center h-9 px-2 pr-4 rounded-md border bg-white hover:bg-gray-100 active:shadow-inner text-gray-700 text-sm font-medium leading-none leading-none shadow-sm">
        Change page template...
      </a>

      <% if @page.deletable? %>
        <%= link_to spina.admin_page_path(@page), class: "flex items-center justify-center h-9 px-2 pr-4 rounded-md bg-transparent text-red-500 hover:bg-gray-100 active:shadow-inner text-sm font-semibold mt-3 leading-none leading-none", method: :delete, data: {confirm: "Are you sure?"} do %>
          Destroy page
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>