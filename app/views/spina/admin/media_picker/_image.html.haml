%label.media-picker-image{data: {target: "media-picker.image"}}
  - if params[:mode] == "trix"
    = radio_button_tag :image_id, image.id, image.id.in?(selected_ids), data: {action: "media-picker#setTrixImage", image_id: image.id, full_image_url: main_app.url_for(image.file)}
  - elsif params[:mode] == "multiple"
    = check_box_tag :image_id, image.id, nil, data: {action: "media-picker#toggle", image_id: image.id, thumbnail_url: thumbnail_url(image)}
  - else
    = radio_button_tag :image_id, image.id, image.id.in?(selected_ids), data: {action: "media-picker#choose", image_id: image.id, thumbnail_url: thumbnail_url(image), full_image_url: main_app.url_for(image.file)}
  %span= image_tag thumbnail_url(image)